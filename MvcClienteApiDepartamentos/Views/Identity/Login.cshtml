<h1>Log In Empleados API</h1>

<form method="post">
    <label>Apellido</label>
    <input type="text" name="username" placeholder="Apellido" class="form-control"/>
    <label>Id Empleado</label>
    <input type="text" name="password" placeholder="Id Empleado" class="form-control" />
    <button type="submit" class="btn btn-info">Log In</button>
</form>

<h1 style="color:red">@ViewBag.Mensaje</h1>